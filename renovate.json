{
    "dependencyDashboard": true,
    "extends": [
        "config:base"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "automerge": true,
            "extends": [
                "schedule:weekends"
            ],
            "groupName": "everything",
            "updateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ]
        }
    ],
    "pinDigests": true,
    "prCreation": "not-pending",
    "stabilityDays": 7
}
